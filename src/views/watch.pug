extends base

block content
    div#videoContainer(data-id=video._id)
        video(src=`/${video.fileUrl}` controls)
        div#videoControls
            div
                button#play Play
                div 
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range" min=0 value=0 step=0.5)#timeline
            div
                button#mute Mute 
                input(type="range" min=0 max=1 value=0.5 step=0.1)#volume
            div 
                button#fullscreen Enter FullScreen          

        div 
            p=video.description
            small=video.createdAt
            br
            small Uploaded By 
                a(href=`/users/${video.owner._id }`)=video.owner.username
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video
            br
            a(href=`${video.id}/delete`) Delete Video 
    if loggedIn
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write your comment.")
                button Add Comment
    div.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment._id)
                    span=comment.text
                    if(loggedIn && (String(comment.owner._id) === String(loggedInUser._id)))
                        span.deleteBtn ‚ùå

block scripts
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js")